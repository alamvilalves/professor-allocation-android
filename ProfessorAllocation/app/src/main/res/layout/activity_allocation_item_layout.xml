<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginVertical="0dp"
    android:background="#FFFFFF"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvAllocationDay"
        android:layout_width="132dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:autoText="true"
        android:text="@string/AllocationDay"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAllocationStartEnd"
        android:layout_width="115dp"
        android:layout_height="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="4dp"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:autoText="true"
        android:text="@string/AllocationStartEnd"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/btnEdit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvAllocationDay"
        app:layout_constraintTop_toTopOf="@+id/tvAllocationDay" />

    <TextView
        android:id="@+id/tvAllocationProfessor"
        android:layout_width="187dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:autoText="true"
        android:text="@string/AllocationProfessor"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/tvAllocationDay"
        app:layout_constraintTop_toBottomOf="@+id/tvAllocationDay" />

    <TextView
        android:id="@+id/tvAllocationCourse"
        android:layout_width="189dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:autoText="true"
        android:text="@string/AllocationCourse"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/tvAllocationProfessor"
        app:layout_constraintTop_toBottomOf="@+id/tvAllocationProfessor" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintRight_toLeftOf="@+id/btnDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>